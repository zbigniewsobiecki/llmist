{
  "name": "llmist-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.4",
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e --filter=llmist",
    "typecheck": "turbo run typecheck",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "clean": "turbo run clean",
    "prepare": "node scripts/install-hooks.js || true",
    "release:dry": "bunx semantic-release --dry-run",
    "docs:dev": "turbo run dev --filter=@llmist/docs",
    "docs:build": "turbo run build --filter=@llmist/docs",
    "docs:preview": "turbo run preview --filter=@llmist/docs"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.0.3",
    "@semantic-release/git": "^10.0.1",
    "rimraf": "^5.0.5",
    "semantic-release": "^25.0.2",
    "turbo": "^2.3.0",
    "typescript": "^5.4.5"
  }
}
